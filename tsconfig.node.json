{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["core/components/*"],
      "@api/*": ["core/api/*"]
    }
  },
  "include": ["vite.config.ts"]
}
